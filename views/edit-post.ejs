<%- include("partials/header.ejs") %>
<h3 class="cnt create-page">Edit Post</h3>
<p class="cnt create-page">
	You can edit your post by filling out the form below.
</p>
<div class="wrapper">
	<form
		action="/update-post/<%= post.slug %>?_method=PATCH"
		method="post"
		class="post-form"
	>
		<label for="title">Title</label>
		<input
			type="text"
			id="title"
			name="title"
			value="<%= post.title %>"
			required
		/>
		<label for="content">Content</label>
		<textarea
			name="content"
			id="content"
			cols="30"
			rows="10"
			placeholder="Write your text here."
			required
		>
<%= post.content %></textarea
		>
		<input type="submit" value="Save Changes" class="button extra" />
	</form>
</div>

<%- include("partials/footer.ejs") %>
